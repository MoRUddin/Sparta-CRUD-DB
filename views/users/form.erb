<form action="/users/<%= @user.id %>" method="POST">
  <div>
    <label>Name</label>
    <input type="text" name="first_name" placeholder="Enter your name" value="<%= @user.first_name %>">
  </div>

  <div>
    <label>Surname</label>
    <textarea name="last_name"><%= @user.last_name %></textarea>
  </div>

  <div>
    <label>Email</label>
    <textarea name="email"><%= @user.email %></textarea>
  </div>

  <div>
    <input type="submit" value="Save">
  </div>
  <% if(@user.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
